/* styles/animated_button.qss */

AnimatedButton {
    /* Base styles for AnimatedButton */
    border: 1px solid #ffffff;
    border-radius: 4px;
    background-color: #000000;
    color: #ffffff;
    font-size: 16px;
    transition: background-color 0.3s, color 0.3s;
}

AnimatedButton:hover {
    /* Hover state styles */
    background-color: #ffffff;
    color: #000000;
}

